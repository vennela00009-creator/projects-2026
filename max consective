class Solution(object):
    def longestOnes(self, nums, k):
       l,zeros,ans=0,0,0
       for r in range(len(nums)):
         if nums[r]==0:
            zeros+=1
         while zeros > k:
            if nums[l]==0:
               zeros-=1
            l+=1
         ans=max(ans,len(nums[l:r+1]))
       return ans
       
        
        
